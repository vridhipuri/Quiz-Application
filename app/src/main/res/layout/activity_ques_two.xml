<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:gravity="center_horizontal|bottom"
            android:textSize="30sp"
            android:textStyle="bold"
            android:text="Question 2"
            android:paddingBottom="10dp"
            />

        <TextView
            android:id="@+id/textView2"
            android:background="@color/blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Which of the following are OOPs concepts?"
            android:gravity="center_horizontal"
            android:textSize="25sp"
            android:textColor="@color/white"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginEnd="40dp"
            android:layout_marginStart="40dp"/>

        <CheckBox
            android:id="@+id/encapsulation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Encapsulation"
            android:textSize="20sp"/>

        <CheckBox
            android:id="@+id/platform"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Platform independent"
            android:textSize="20sp"/>

        <CheckBox
            android:id="@+id/abstraction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Abstraction"
            android:textSize="20sp"/>

        <CheckBox
            android:id="@+id/inheritance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Inheritance"
            android:textSize="20sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center">
        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/blue"
            android:text="NEXT"/>

    </LinearLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:textSize="20sp"/>

</LinearLayout>